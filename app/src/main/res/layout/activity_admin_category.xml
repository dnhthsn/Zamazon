<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Thêm sản phẩm"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@id/slogan_category"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/t_shirts"
            android:src="@drawable/tshirts"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/female_dresses"
            android:src="@drawable/female_dresses"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/shoes"
            android:src="@drawable/shoess"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/purses_bags"
            android:src="@drawable/purses_bags"
            android:layout_width="80dp"
            android:layout_height="80dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@id/linear1_category_layout"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/glasses"
            android:src="@drawable/glasses"
            android:layout_width="90dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/sports"
            android:src="@drawable/sports"
            android:layout_width="90dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/sweather"
            android:src="@drawable/sweather"
            android:layout_width="90dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/watches"
            android:src="@drawable/watches"
            android:layout_width="90dp"
            android:layout_height="80dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@id/linear2_category_layout"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headphoness_handfree"
            android:src="@drawable/headphoness"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/hats"
            android:src="@drawable/hats"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:id="@+id/mobiles"
            android:src="@drawable/mobiles"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>



    <Button
        android:id="@+id/btn_logout_admin"
        android:layout_gravity="center_horizontal"
        android:text="Đăng xuất"
        android:background="@drawable/buttons"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear3_category_layout"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
</RelativeLayout>